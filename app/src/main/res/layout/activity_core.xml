<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/core_drawer"
    tools:context=".Core">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemTextColor="@color/colorPurpleActive"
        app:itemIconTint="@color/cardview_light_background"
        app:menu="@menu/side_bar"
        app:headerLayout="@layout/my_header"
        android:layout_gravity="start"
        android:background="@drawable/backimageregister">

    </android.support.design.widget.NavigationView>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.v4.widget.DrawerLayout>